{
  "$schema": "http://json.schemastore.org/template",
  "author": "BepInEx, 10_days_till_xmas",
  "classifications": [ "BepInEx", "BepInEx 5", "Plugin", "Ultrakill" ],
  "identity": "UltraModding.MinimalPluginTemplate",
  "groupIdentity": "UltraModding.Templates",
  "generatorVersions": "1.0.0",
  "name": "Ultrakill Minimal Plugin Template",
  "shortName": "ukplugin-min",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "sourceName": "UltraModding.MinimalPluginTemplate",
  "symbols": {
    "Name": {
      "type": "parameter",
      "description": "Plugin name",
      "datatype": "text",
      "replaces": "My first plugin",
      "defaultValue": "My first plugin"
    },
    "GUID": {
      "type": "parameter",
      "description": "Unique plugin GUID",
      "datatype": "text",
      "replaces": "{guid}",
      "defaultValue": "com.yourname.pluginname"
    },
    "Version": {
      "type": "parameter",
      "description": "Plugin version",
      "datatype": "text",
      "replaces": "{version}",
      "defaultValue": "1.0.0"
    },
    "UltrakillDirectory": {
      "type": "parameter",
      "description": "Path to Ultrakill directory",
      "datatype": "text",
      "defaultValue": "C:/Program Files (x86)/Steam/steamapps/common/ULTRAKILL/"
    },
    "CleanUltrakillDirectory": {
      "type": "generated",
      "generator": "regex",
      "datatype": "string",
      "replaces": "{ultrakill_dir}",
      "parameters": {
        "source": "UltrakillDirectory",
        "steps": [
          {
            "regex": "[^/\\\\]$",
            "replacement": "$&/"
          }
        ]
      }
    }
  }
}